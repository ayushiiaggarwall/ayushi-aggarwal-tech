{
  "build": {
    "command": "npm run build",
    "output": ".next",
    "install": "npm install"
  },
  "deploy": {
    "command": "npm start",
    "port": 3000
  },
  "env": {
    "NODE_ENV": "production",
    "NODE_VERSION": "20"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs20.x",
      "timeout": 30
    }
  }
}
